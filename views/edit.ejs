<!DOCTYPE html>
<%- include ('header', {title: "Edit a Sighting"}) %>
  <body>
    <%- include ('navbar') %>
    <div class="container mx-auto" style="width: 200px; margin-top: 5%">
      <form action="/sighting/<%= sighting.index %>?_method=PUT" method="POST">
        <label for="text">Description:</label><br />
        <textarea id="text" name="text"><%= sighting.text %></textarea><br />
        <label for="date_time">Date and Time:</label><br />
        <input
          type="text"
          id="date_time"
          name="date_time"
          value="<%= sighting.date_time %>"
        /><br />
        <label for="city">City:</label><br />
        <input
          type="text"
          id="city"
          name="city"
          value="<%= sighting.city %>"
        /><br />
        <label for="state">State:</label><br />
        <input
          type="text"
          id="state"
          name="state"
          value="<%= sighting.state %>"
        /><br />
        <label for="shape">Shape:</label><br />
        <input
          type="text"
          id="shape"
          name="shape"
          value="<%= sighting.shape %>"
        /><br />
        <label for="duration">Duration (min):</label><br />
        <input
          type="text"
          id="duration"
          name="duration"
          value="<%= sighting.duration %>"
        /><br />
        <label for="summary">Summary:</label><br />
        <textarea id="summary" name="summary"><%= sighting.summary %></textarea
        ><br />
        <input type="submit" value="Submit" />
      </form>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
